#pragma once

#include <views/BlogView>
#include <models/BlogPost>
#include <QHash>

class BlogPostList : public BlogView {
	public:
		BlogPostList(QHash<unsigned, BlogPost*> blogPosts);
		
		void blogPostTable(DomNode& node);
	private:
		QHash<unsigned, BlogPost*> blogPosts;
};

class BlogPostLine : public BlogView {
	public:
		BlogPostLine(DomNode node, BlogPost* blogPost, unsigned blogPostId);
		
		void id(DomNode& node);
		void title(DomNode& node);
		void showLink(DomNode& node);
		void editLink(DomNode& node);
		void deleteLink(DomNode& node);
	private:
		BlogPost* blogPost;
		unsigned blogPostId;
};
