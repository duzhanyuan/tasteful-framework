#pragma once

#include <views/BlogView>
#include <models/BlogPost>
#include <QHash>

class BlogPostList : public BlogView {
	public:
		BlogPostList(QHash<unsigned, BlogPost*> blogPosts);
		
		QDomNode blogPostTable(QDomNode node);
	private:
		QHash<unsigned, BlogPost*> blogPosts;
};

class BlogPostLine : public BlogView {
	public:
		BlogPostLine(QDomNode node, BlogPost* blogPost, unsigned blogPostId);
		
		QDomNode id(QDomNode node);
		QDomNode title(QDomNode node);
		QDomNode showLink(QDomNode node);
		QDomNode editLink(QDomNode node);
		QDomNode deleteLink(QDomNode node);
	private:
		BlogPost* blogPost;
		unsigned blogPostId;
};
