#pragma once

#include <XmlTransform>
#include <UrlHelper>
#include <models/BlogPost>

class BlogPostView : public XmlTransform, protected UrlHelper {
	public:
		BlogPostView(DomNode node);
	
		DomNode toNode() const;
	
		void reset(BlogPost* blogPost, unsigned blogPostId);
		
		void id(DomNode& node) const;
		void title(DomNode& node) const;
		void text(DomNode& node) const;
		void shortText(DomNode& node) const;
		void showLink(DomNode& node) const;
		void editLink(DomNode& node) const;
		void deleteLink(DomNode& node) const;
	private:
		DomNode node;
		BlogPost* blogPost;
		unsigned blogPostId;
};