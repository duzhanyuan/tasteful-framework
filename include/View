#pragma once

#include <QList>
#include <QString>
#include <internal/SessionContainer>
#include <Cookie>
#include <HttpHeader>
#include <UrlHelper>

using namespace internal;

class View : public SessionContainer, protected UrlHelper {
	public:
		View();
		virtual ~View();
		
		virtual QList<HttpHeader> headers();
		virtual QByteArray content() = 0;
	
		virtual void initialize() = 0;
};
