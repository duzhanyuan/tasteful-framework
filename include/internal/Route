#pragma once

#include <internal/Action>
#include <internal/util.h>
#include <http>
#include <QString>
#include <QPair>
#include <QHash>
#include <QList>
#include <QRegExp>
#include <QVariantMap>
#include <string>
#include <QSharedPointer>

namespace internal {
	class RequestedAction {
		public:
			RequestedAction();
			RequestedAction(HttpMethod method, QString path);
		
			HttpMethod getMethod() const;
			QString getPath() const;
		private:
			HttpMethod method;
			QString path;
	};
	
	class Route {
		public:
			Route(HttpMethod method, QString urlPattern);
		
			static Route* create(HttpMethod method, QString urlPattern);
		
			HttpMethod getMethod() const;
			QString getUrlPattern() const;
			Action* getAction() const;
			void setAction(QSharedPointer<Action> action);
		
			virtual bool match(const RequestedAction& requestedAction) = 0;
			virtual QString urlFor(QVariantMap parameters) = 0;
		
			virtual bool isStatic();
			virtual bool isDynamic();
			virtual bool isWildcard();
		protected:
			QString urlParameters(QVariantMap parameters);
		
			HttpMethod method;
			QString urlPattern;
			QSharedPointer<Action> action;
	};

	class StaticRoute : public Route {
		public:
			StaticRoute(HttpMethod method, QString urlPattern);
		
			virtual bool isStatic();
			virtual bool match(const RequestedAction& requestedAction);
			virtual QString urlFor(QVariantMap parameters);
	};

	class DynamicRoute : public Route {
		public:
			DynamicRoute(HttpMethod method, QString urlPattern);
		
			virtual bool isDynamic();
			virtual bool match(const RequestedAction& requestedAction);
			virtual QString urlFor(QVariantMap parameters);

			QHash<QString, QString> getMatchedParts(QString path);
		private:
			class UrlPart {
				public:
					UrlPart(QString part);
				
					QString getName();
					bool isVariable();
					bool match(QString otherPart);
				private:
					QString part;
					bool variable;
			};
			QList<UrlPart> urlParts;
	};

	class WildcardRoute : public Route {
		public:
			WildcardRoute(HttpMethod method, QString urlPattern);
		
			virtual bool isWildcard();
			virtual bool match(const RequestedAction& requestedAction);
			virtual QString urlFor(QVariantMap parameters);
		private:
			QRegExp regexp;
	};
}