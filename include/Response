#pragma once

#include <QStringList>
#include <QHash>
#include <QString>
#include <QFile>
#include <HttpResponse>
#include <internal/MimeDatabase>
#include <AbstractSession>

using namespace internal;

class Response : public HttpResponse {
	public:
		Response(unsigned statusCode = http::OK);
	
		HttpResponse& asHttpResponse();
	
		void setMimeType(QString mimeType);
		void setMimeTypeForFileName(QString filename);
		
		void setSession(AbstractSession* session);
		
		//void setContentFromFile(const QFile& contentFile);
		
		Response& asDownload(QString name);
		
		static Response notFound();
		static Response redirect(QString url);
		static Response redirectPermanently(QString url);
		static Response forContent(QString content, unsigned statusCode = http::OK);
		static Response forContent(QByteArray content, unsigned statusCode = http::OK);
		static Response forFile(QFile& file);
		static Response download(QFile& file, QString name=QString());
		static Response download(QByteArray content, QString name);
		static Response accessDenied();
	private:		
		static MimeDatabase mimeDatabase;
};
